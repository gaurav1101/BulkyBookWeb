@model IEnumerable<CoverType>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="covertype" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle">&nbsp;&nbsp;&nbsp; Create New CoverType</i>

            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%"> @obj.id</td>
                    <td width="25%">@obj.Name</td>
                    <td width="25%">
                        <div role="group">
                            <a asp-controller="covertype" asp-action="Edit" asp-route-id="@obj.id" />
                            <i class="bi bi-pencil-square"></i>  &nbsp;
                            <a asp-controller="covertype" asp-action="Delete" asp-route-id="@obj.id" />
                            <i class="bi bi-trash3"></i>
                        </div>
                    </td>
                </tr>
            }
        </tbody>



    </table>
</div>